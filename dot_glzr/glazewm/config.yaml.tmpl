window_rules:
  - commands: ["ignore"]
    match:
      - window_process: { equals: "Taskmgr" }
      - window_process: { equals: "perfmon" }
      - window_process: { equals: "explorer" }
        window_title: { equals: "Run" }
      - window_process: { equals: "explorer" }
        window_class: { equals: "OperationStatusWindow" }
      - window_process: { equals: "TextInputHost" }
      - window_process: { equals: "OptionalFeatures" }
      - window_process: { equals: "mmc" }

      # Ignore rules for various 3rd-party apps.
      - window_process: { equals: "PowerToys" }
        window_class: { regex: 'HwndWrapper\[PowerToys\.PowerAccent.*?\]' }
      - window_process: { equals: "PowerToys" }
        window_title: { regex: ".*? - Peek" }
      - window_process: { equals: "Lively" }
        window_class: { regex: "HwndWrapper" }

      # League of Legends
      - window_class: { equals: "RiotWindowClass" }
        window_process: { equals: "League of Legends" }
      - window_process: { equals: "LeagueClientUx" }

      # FC Online
      - window_process: { equals: "fczf" }
        window_class: { equals: "FIFAKC" }
      - window_process: { equals: "Garena" }

      # Steam Games
      - window_process: { regex: "^dontstarve_steam" }
      - window_process: { equals: "eldenring" }
      - window_process: { equals: "OxygenNotIncluded" }
      - window_process: { regex: "^ProjectZomboid(32|64)$" }
      - window_process: { equals: "SpaceEngine" }
      - window_process: { equals: "EAAntiCheat" }
      - window_process: { equals: "FC25" }
      - window_process: { equals: "EADesktop" }
      - window_process: { equals: "Frostpunk2-Win64-Shipping" }
      - window_process: { equals: "eurotrucks2" }
      - window_process: { equals: "Universe Sandbox x64" }
      - window_process: { equals: "ManorLords-Win64-Shipping" }
      - window_class: { equals: "UnityWndClass" }
      - window_process: { equals: "underlords" }
      - window_process: { equals: "dota2" }
      - window_process: { equals: "GalaxyEngine" }

      # MSI Center
      - window_process: { equals: "DCv2" }
        window_class: { regex: '^HwndWrapper\[DCv2\.exe' }

      # SP Football Life 2025
      - window_process: { equals: "FL_2025" }

      # Unikey
      - window_process: { equals: "UnikeyNT" }

      # HostsMan
      - window_process: { equals: "hm" }

      # Yoosee
      - window_process: { equals: "Yoosee" }

      # Visual Studio 20xx
      - window_process: { equals: "devenv" }
        window_class: { regex: '^HwndWrapper\[DefaultDomain;;.*\]$' }
        window_title: { regex: "^[Ss]earch$" }

      # OneDrive
      - window_process: { equals: "OneDrive" }

      # 1.1.1.1
      - window_process: { equals: "Cloudflare WARP.exe" }

      # Docker Installer
      - window_process: { regex: "^Docker Desktop Installer" }

      # Visual Studio Installer
      - window_process: { equals: "setup" }
        window_class: { regex: '^HwndWrapper\[setup\.exe;;.*\]$' }

      # Visual Studio 20xx Initial Screen
      - window_process: { equals: "devenv" }
        window_title: { equals: ""}

  - commands: ["set-floating --centered"]
    match:
      - window_process: { equals: "Unity Hub" }

      # LINQPad
      - window_process: { regex: "^LINQPad" }
        window_title: { not_regex: "^LINQPad \\d+( Beta)?$" }

      # ShareX
      - window_process: { regex: "^ShareX" }
        window_title: { not_regex: "^ShareX [\\d.]+( Portable)?$" }

      # Ignores picture-in-picture windows for browsers.
      - window_title: { regex: "[Pp]icture.in.[Pp]icture" }
        window_class: { regex: "Chrome_WidgetWin_1|MozillaDialogClass" }

      # League of Legends
      - window_process: { equals: "Riot Client" }

      # LG Hub
      - window_process: { equals: "lghub" }
        window_class: { equals: "Chrome_WidgetWin_1" }

      # NVIDIA Control Panel
      - window_process: { equals: "nvcplui" }
        window_class: { regex: "^Afx:" }

  - commands: ["set-tiling"]
    match:
      # Visual Studio 20xx
      - window_process: { equals: "devenv" }
        window_title: { regex: "Microsoft Visual Studio( (Preview|Insiders))?$" }

      # VS Debug Console
      - window_process: { equals: "VsDebugConsole" }

keybindings:
  # Shift focus in a given direction.
  - commands: ["focus --direction left"]
    bindings: ["alt+h"]
  - commands: ["focus --direction right"]
    bindings: ["alt+l"]
  - commands: ["focus --direction up"]
    bindings: ["alt+k"]
  - commands: ["focus --direction down"]
    bindings: ["alt+j"]

  # Move focused window in a given direction.
  - commands: ["move --direction left"]
    bindings: ["alt+shift+h"]
  - commands: ["move --direction right"]
    bindings: ["alt+shift+l"]
  - commands: ["move --direction up"]
    bindings: ["alt+shift+k"]
  - commands: ["move --direction down"]
    bindings: ["alt+shift+j"]

  # Center focused window
  - commands: ["position --centered"]
    bindings: ["alt+c"]

  # Resize focused window by a percentage or pixel amount.
  - commands: ["resize --width -5%", "position --centered"]
    bindings: ["alt+u"]
  - commands: ["resize --width +5%", "position --centered"]
    bindings: ["alt+i"]
  - commands: ["resize --height -5%", "position --centered"]
    bindings: ["alt+o"]
  - commands: ["resize --height +5%", "position --centered"]
    bindings: ["alt+p"]
  - commands: ["resize --width -5% --height -3%", "position --centered"]
    bindings: ["alt+shift+u"]
  - commands: ["resize --width +5% --height +3%", "position --centered"]
    bindings: ["alt+shift+i"]

  # Disables window management and all other keybindings until alt+shift+p
  # is pressed again.
  - commands: ["wm-toggle-pause"]
    bindings: ["alt+shift+esc"]

  # Change tiling direction. This determines where new tiling windows will
  # be inserted.
  - commands: ["toggle-tiling-direction"]
    bindings: ["alt+v"]

  # Change focus from tiling windows -> floating -> fullscreen.
  - commands: ["wm-cycle-focus"]
    bindings: ["alt+space"]

  # Change the focused window to be tiling.
  - commands: ["toggle-floating --centered"]
    bindings: ["alt+shift+space"]

  # Change the focused window to be fullscreen.
  - commands: ["toggle-fullscreen"]
    bindings: ["alt+n"]

  # Change the focused window to be tiling.
  - commands: ["toggle-tiling"]
    bindings: ["alt+m"]

  # Close focused window.
  - commands: ["close"]
    bindings: ["alt+shift+q"]

  # Kill GlazeWM process safely.
  - commands: ["wm-exit"]
    bindings: ["alt+shift+e"]

  # Re-evaluate configuration file.
  - commands: ["wm-reload-config"]
    bindings: ["alt+shift+r"]

  # Redraw
  - commands: ["wm-redraw"]
    bindings: ["alt+shift+w"]

  # Launch CMD terminal.
  #- commands: ["shell-exec wt"]
  - commands: ["shell-exec wezterm-gui"]
    bindings: ["alt+enter"]

  # Change focus to a workspace defined in `workspaces` config.
#  - commands: ["focus --workspace 1"]
#    bindings: ["alt+1"]
