{{- if eq .chezmoi.os "linux" }}
#!/bin/sh

apk update

apk add --no-cache \
    bash \
    zsh \
    git \
    curl \
    tmux \
    neovim \
    vim \
    lazygit

chsh -s /bin/zsh $USER
{{- else if and (eq .chezmoi.os "windows") (eq .chezmoi.mingw 1) }}
#!/bin/bash

pacman -Syu --noconfirm
pacman -S --noconfirm \
    zsh

{{- end }}
